<%= form_with model: @anticipo, url: anticipos_path, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :Arquitecto, class: "d-block" %>
    <%= f.select :arquitecto_id, options_for_select(@arquitectos.map { |arquitecto| [arquitecto.nombre, arquitecto.id] }), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :Obra, class: "d-block" %>
    <%= f.select :obra_id, options_for_select(@obras.map { |obra| [obra.nombre, obra.id] }), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :fecha %>
    <%= f.text_field :fecha, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cantidad %>
    <%= f.text_field :cantidad, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :concepto %>
    <%= f.text_field :concepto, class: "form-control" %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
