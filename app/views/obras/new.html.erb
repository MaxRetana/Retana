<%= form_with model: @obra, url: obras_path, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :Nombre %>
    <%= f.text_field :nombre, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :Arquitecto, class: "d-block" %>
    <%= f.select :arquitecto_id, options_for_select(@arquitectos.map { |arquitecto| [arquitecto.nombre, arquitecto.id] }), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :Estatus %>
    <%= f.text_field :estado, class: "form-control" %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>

